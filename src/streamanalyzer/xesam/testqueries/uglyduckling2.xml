<?xml version="1.0" encoding="utf-8"?>
<request>
  <query>
    <or>
      <and>
        <contains>
          <field name="dc:title"/>
          <string>ugly duckling</string>
        </contains>
        <contains negate="true">
          <field name="dc:author"/>
          <string>andersen</string>
        </contains>
        <greaterThan>
          <field name="file:size"/>
          <integer>2048</integer>
        </greaterThan>
        <equals>
          <field name="mime"/>
          <string>application/pdf</string>
        </equals>
      </and>
      <equals boost="20">
        <field name="dc:author"/>
        <string>carl barks</string>
      </equals>
    </or>
  </query>
</request>
